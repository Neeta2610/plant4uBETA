<main class="login-page container py-4 py-lg-5 my-4">
  <div class="row">
    <div class="col-md-6 m-auto">
      <div class="card border-0 box-shadow">
        <div class="card-body">
          <h2 class="h4 mb-1">Reset your Password</h2>
          <div class="py-3">
            <h4 class="d-inline-block align-middle font-size-base font-weight-semibold mb-2 mr-2">Please enter your new
              password.
            </h4>
          </div>
          <hr>
          <form class="needs-validation checkout_details_area" action="/{{route}}/reset/{{token}}"  method="post" novalidate autocomplete="off">
            <div class="input-group-overlay form-group">
              <div class="input-group-prepend-overlay"><span class="input-group-text"><i class="czi-locked"></i></span>
              </div>
              <div class="password-toggle" for="si-password">
                <input class="form-control prepended-form-control" type="password" id="user_password" name="password"
                  placeholder="New Password" required>
              </div>
            </div>

            <div class="input-group-overlay form-group">
              <div class="input-group-prepend-overlay"><span class="input-group-text"><i class="czi-locked"></i></span>
              </div>
              <div class="password-toggle" for="si-password">
                <input class="form-control prepended-form-control" type="password" name="frm_user_password_confirm"
                  placeholder="Confirm Password" required>
                <label class="password-toggle-btn">
                  <input class="custom-control-input" type="checkbox"><i
                    class="fas fa-eye"></i><span class="sr-only">Show password</span>
                </label>
              </div>
            </div>
            <hr class="mt-4">
            <div class="text-right pt-4">
              <button class="btn btn-primary btn-shadow" type="submit"><i
                  class="fas fa-unlock mr-2 ml-n21"></i>Save Password</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</main>