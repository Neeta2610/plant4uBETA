<div class="Wrapper-product">
<div class="filter">

</div>
<div class="productsWrapper">
    {{#if filtered}}
        <div class="product-results col-sm-12">
                    <div class="dropdown show">
        <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Show
        </a>

        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
            <a class="dropdown-item" href="#">10</a>
            <a class="dropdown-item" href="#">30</a>
            <a class="dropdown-item" href="#">All</a>
        </div>
        </div>
            {{#ifCond @root.paginateUrl '==' 'category'}}
            <h1>{{ @root.__ "Category" }} - <strong>{{@root.searchTerm}}</strong></h1>
            {{else}}
            <h1>{{ @root.__ "Search results" }} - <strong>{{@root.searchTerm}}</strong></h1>
            {{/ifCond}}
        </div>
    {{/if}}
    <div class="row product-layout">
        {{#ifCond results.length '==' 0}}
            <div class="col-sm-12">
                <p class="text-danger">{{ @root.__ "No products found" }}</p>
            </div>
        {{/ifCond}}
        {{#each results}}
            <div class="box">
                <div class="single-product">
                        <div class="product-wrapper">
                                <div class="product-thumb">
                                    {{#if productImage}}
                                        <img src="{{this.productImage}}" alt="...">
                                    {{else}}
                                        <img src="/uploads/placeholder.png" alt="...">
                                    {{/if}}
                                    <a class="btn-round" data-id="{{this._id}}" data-link="{{this.productPermalink}}" data-has-variants="{{checkProductVariants this.variants}}" role="button"><i class="fa fa-shopping-cart"></i></a>
                                </div>
                        </div>
                    <div class="product-title">
                        <h3>
                            {{#if productPermalink}}
                                <a href="/product/{{this.productPermalink}}">{{this.productTitle}}</a>
                            {{else}}
                                <a href="/product/{{this._id}}">{{this.productTitle}}</a>             
                            {{/if}}
                            </h3>
                            <p>
                            {{currencySymbol @root.config.currencySymbol}}{{formatAmount productPrice}}
                            <span>{{currencySymbol @root.config.currencySymbol}} 900</span>
                        </p>
                            <span class="save">Save â‚¹32</span>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div> 
</div>
