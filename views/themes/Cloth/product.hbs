<div class="product-layout col-sm-11 ml-auto mr-auto top-marg-100">
    
       <div class="single-product-area section-padding-100 clearfix">

                <div class="row">
                    <div class="col-12 col-md-7">
                        <div class="single_product_thumb">
                            <div id="product_details_slider" class="carousel slide row" data-ride="carousel">
                                
                                <div class="carousel-inner col-sm-9 col-md-9">
                                    {{#if result.productImage}}
                                    <div class="carousel-item active">
                                        <a class="gallery_img" href="{{result.productImage.[0].path}}">
                                            <img class="d-block w-100" src="{{result.productImage.[0].path}}" alt="First slide">
                                        </a>
                                    </div>
                                    {{#if result.productImage.[1]}}
                                    <div class="carousel-item">
                                        <a class="gallery_img" href="{{result.productImage.[1].path}}">
                                            <img class="d-block w-100" src="{{result.productImage.[1].path}}" alt="First slide">
                                        </a>
                                    </div>
                                    {{/if}}
                                    {{#if result.productImage.[2]}}
                                    <div class="carousel-item">
                                        <a class="gallery_img" href="{{result.productImage.[2].path}}">
                                            <img class="d-block w-100" src="{{result.productImage.[2].path}}" alt="First slide">
                                        </a>
                                    </div>
                                    {{/if}}
                                    {{#if result.productImage.[3]}}
                                    <div class="carousel-item">
                                        <a class="gallery_img" href="{{result.productImage.[3].path}}">
                                            <img class="d-block w-100" src="{{result.productImage.[3].path}}" alt="First slide">
                                        </a>
                                    </div>
                                    {{/if}}
                                    {{#if result.productImage.[4]}}
                                    <div class="carousel-item">
                                        <a class="gallery_img" href="{{result.productImage.[4].path}}">
                                            <img class="d-block w-100" src="{{result.productImage.[4].path}}" alt="First slide">
                                        </a>
                                    </div>
                                    {{/if}}
                                    {{#if result.productImage.[5]}}
                                    <div class="carousel-item">
                                        <a class="gallery_img" href="{{result.productImage.[5].path}}">
                                            <img class="d-block w-100" src="{{result.productImage.[5].path}}" alt="First slide">
                                        </a>
                                    </div>
                                    {{/if}}
                                    {{else}}
                                    <div class="carousel-item active">
                                        <a class="gallery_img" href="/images/p1.jpeg">
                                            <img class="d-block w-100" src="/images/p1.jpeg" alt="First slide">
                                        </a>
                                    </div>
                                    <div class="carousel-item">
                                        <a class="gallery_img" href="/images/p5.jpeg">
                                            <img class="d-block w-100" src="/images/p5.jpeg" alt="Second slide">
                                        </a>
                                    </div>
                                    <div class="carousel-item">
                                        <a class="gallery_img" href="/images/p5.jpeg">
                                            <img class="d-block w-100" src="/images/p5.jpeg" alt="Third slide">
                                        </a>
                                    </div>
                                    <div class="carousel-item">
                                        <a class="gallery_img" href="/images/p1.jpeg">
                                            <img class="d-block w-100" src="/images/p1.jpeg" alt="Fourth slide">
                                        </a>
                                    </div>
                                    {{/if}}
                                </div>
                                <div class="carousel-indicators col-sm-2 col-md-2">
                                    {{#if result.productImage}}
                                    <li class="active" data-target="#product_details_slider" data-slide-to="0" style="background-image: url({{result.productImage.[0].path}});">
                                    </li>
                                    {{#if result.productImage.[1]}}
                                    <li data-target="#product_details_slider" data-slide-to="1" style="background-image: url({{result.productImage.[1].path}});">
                                    </li>
                                    {{/if}}
                                    {{#if result.productImage.[2]}}
                                    <li data-target="#product_details_slider" data-slide-to="2" style="background-image: url({{result.productImage.[2].path}});">
                                    </li>
                                    {{/if}}
                                    {{#if result.productImage.[3]}}
                                    <li data-target="#product_details_slider" data-slide-to="3" style="background-image: url({{result.productImage.[3].path}});">
                                    </li>
                                    {{/if}}
                                    {{#if result.productImage.[4]}}
                                    <li data-target="#product_details_slider" data-slide-to="4" style="background-image: url({{result.productImage.[4].path}});">
                                    </li>
                                    {{/if}}
                                    {{#if result.productImage.[5]}}
                                    <li data-target="#product_details_slider" data-slide-to="5" style="background-image: url({{result.productImage.[5].path}});">
                                    </li>
                                    {{/if}}
                                    {{else}}
                                    <li class="active" data-target="#product_details_slider" data-slide-to="0" style="background-image: url(/images/p1.jpeg);">
                                    </li>
                                    <li data-target="#product_details_slider" data-slide-to="1" style="background-image: url(/images/p5.jpeg);">
                                    </li>
                                    <li data-target="#product_details_slider" data-slide-to="2" style="background-image: url(/images/p5.jpeg);">
                                    </li>
                                    <li data-target="#product_details_slider" data-slide-to="3" style="background-image: url(/images/p1.jpeg);">
                                    </li>
                                    {{/if}}
                                </div>
                            </div>
                            <p><strong class="text-danger">Note:</strong> The Product Image shown is for reference purpose only. The real product may be different because of the climate, season and surrounding conditions.</p>
                        </div>
                    </div>
                    <div class="col-12 col-md-5">
                        <div class="single_product_desc">
                            <!-- Product Meta Data -->
                            <div class="product-meta-data">
                                <div class="line"></div>
                                <p class="product-price">{{currencySymbol config.currencySymbol}}{{result.productPrice}}</p>
                                <a href="#">
                                    <h6>{{result.productTitle}}</h6>
                                </a>
                                <!-- Ratings & Review -->
                                <div class="ratings-review mb-15 d-flex align-items-center justify-content-between">
                                    <div class="ratings">
                                        {{#forTimes result.productRating}}
                                          <i class="fas fa-star i"></i>
                                          {{/forTimes}}
                                          {{#forTimesminus result.productRating}}
                                           <i class="far fa-star i"></i>
                                          {{/forTimesminus}}
                                          <small>Based on {{reviews.length}} Reviews</small>
                                    </div>
                                    <div class="review">
                                        <a href="#descheading">Write A Review</a>
                                    </div>
                                </div>
                                <!-- Avaiable -->
                                {{#if result.productStock}}
                                <p class="avaibility top-marg-5"><i class="fa fa-circle"></i> In Stock</p>
                                <small>({{result.productStock}}) pcs left</small>
                                {{else}}
                                <p class="avaibility non-avaibility"><i class="fa fa-circle"></i> Not In Stock</p>
                                {{/if}}
                            </div>

                            <div class="short_overview my-4">
                                <p>{{{fixTags result.productminiDescription}}}</p>
                            </div>

                            <!-- Add to Cart Form -->
                            <div class="cart clearfix">
                                <div class="cart-btn d-flex bottom-marg-20">
                                    <p>Qty</p>
                                    <div class="quantity">
                                        <span class="qty-minus" onclick="var effect = document.getElementById('product_quantity'); var qty = effect.value; if( !isNaN( qty ) &amp;&amp; qty &gt; 1 ) effect.value--;return false;"><i class="fa fa-caret-down" aria-hidden="true"></i></span>
                                        <input type="number" class="qty-text" id="product_quantity" step="1" min="1" max="300" name="quantity" value="1">
                                        <span class="qty-plus" onclick="var effect = document.getElementById('product_quantity'); var qty = effect.value; if( !isNaN( qty )) effect.value++;return false;"><i class="fa fa-caret-up" aria-hidden="true"></i></span>
                                    </div>
                                    {{#if result.productStock}}
                                        <button  name="addtocart" value="5" class="btn btn-success product-add-to-cart marg-left-20">Add to cart</button>
                                        {{else}}
                                        <button class="btn btn-success .marg-left-20" disabled>Coming Soon</button>
                                        {{/if}}
                                </div>
                                <div class="avaliblity checkout_details_area">
                                    <label class="mt-auto mb-auto marg-right-7" for=""><i class="fas fa-street-view h5 mb-0"></i></label>
                                    <input type="text" class="form-control he-45" id="checkavailable" placeholder="Enter PinCode to Check">
                                </div>
                                <div class="displayavailable bottom-marg-10">
                                    <h6 id="displayavailable"></h6>
                                </div>
                            </div>

                            {{!-- Offers --}}
                            <div class="promooffers">
                                <h6>Available Offers</h6>
                                <ul>
                                    <li><strong class="cl-green">PLANT500</strong> Get 5% off on order over 500 (max 50)</li>
                                    <li><strong class="cl-green">FIRST234</strong> Get 20 off on first order</li>
                                </ul>
                            </div>

                        </div>
                    </div>
                </div>
        </div>
    <div class="row">
    <div class="descproduct">
		<div class="descheading" id="descheading">
			<h3>Description</h3>
			<h3>Reviews</h3>
			<h3>Policy</h3>
		</div>
		<div class="descriptionmain desccont">
			<h2>Description</h2>
			<p>{{{fixTags result.productDescription}}}</p>
		</div>
		<div class="reviewmain desccont">
			<div class="reviewinner">
				<h4>Customer Reviews 
                    {{#if reviewPermission}}
                    <a>WRITE A REVIEW</a>
                    {{/if}}
                    {{#if editreviewPermission}}
                    <a>EDIT REVIEW</a>
                    {{/if}}
                </h4>
				<div class="star">
						{{#forTimes result.productRating}}
                            <i class="fas fa-star i"></i>
                            {{/forTimes}}
                            {{#forTimesminus result.productRating}}
                            <i class="far fa-star i"></i>
                            {{/forTimesminus}}
						<b>Based on {{reviews.length}} Review</b>
				</div>
			</div>
            {{#if reviewPermission}}
			<div class="reviewinput displaynone checkout_details_area">
                <form action="/product/addreview" method="post">
				<h4>Write A Review</h4>
				<div class="input1">
					<label for="title">Review Title</label><br>
					<input type="text" class="form-control" id="reviewTitle" name="reviewTitle" value="" placeholder="Enter Review Title" required>
				</div>
				<label for="">Rating</label>
				<div class="star">
                                        <div class="rating-star-form">
                                            <label>
                                                <input class="radiostar" type="radio" name="stars" value="1" />
                                                <span class="icon">★</span>
                                            </label>
                                            <label>
                                                <input class="radiostar" type="radio" name="stars" value="2" />
                                                <span class="icon">★</span>
                                                <span class="icon">★</span>
                                            </label>
                                            <label>
                                                <input class="radiostar" type="radio" name="stars" value="3" />
                                                <span class="icon">★</span>
                                                <span class="icon">★</span>
                                                <span class="icon">★</span>   
                                            </label>
                                            <label>
                                                <input class="radiostar" type="radio" name="stars" value="4" />
                                                <span class="icon">★</span>
                                                <span class="icon">★</span>
                                                <span class="icon">★</span>
                                                <span class="icon">★</span>
                                            </label>
                                            <label>
                                                <input class="radiostar" type="radio" name="stars" value="5" />
                                                <span class="icon">★</span>
                                                <span class="icon">★</span>
                                                <span class="icon">★</span>
                                                <span class="icon">★</span>
                                                <span class="icon">★</span>
                                            </label>
                                            </div>
                                    
				</div>
                <input type="hidden" name="productreviewId" id="productreviewId" value="{{result._id}}">
                {{#if result.productPermalink}}
                <input type="hidden" name="link" id="link" value="/product/{{result.productPermalink}}">
                {{else}}
                <input type="hidden" name="link" id="link" value="/product/{{result._id}}">
                {{/if}}
				<div class="inputtextarea">
					<label for="textarea">Review Must Not Exceed 150 Words</label><br>
					<textarea name="reviewtextarea" class="form-control" id="reviewtextarea" value="" placeholder="Enter the Review" required></textarea>
				</div>
				<div class="submit">
					<button class="btn amado-btn" type="submit">Submit</button>
				</div>
            </form>
			</div>
            {{/if}}
            {{#if editreviewPermission}}
            <div class="reviewinput displaynone checkout_details_area">
                <form action="/product/editreview" method="post">
				<h4>Write A Review</h4>
				<div class="input1">
					<label for="title">Review Title</label><br>
					<input type="text" class="form-control" id="reviewTitle" name="reviewTitle" value="{{rdata.title}}" required>
				</div>
				<label for="">Rating</label>
				<div class="star">
                                        <div class="rating-star-form">
                                            <label>
                                                <input class="radiostar" type="radio" name="stars" value="1" />
                                                <span class="icon">★</span>
                                            </label>
                                            <label>
                                                <input class="radiostar" type="radio" name="stars" value="2" />
                                                <span class="icon">★</span>
                                                <span class="icon">★</span>
                                            </label>
                                            <label>
                                                <input class="radiostar" type="radio" name="stars" value="3" />
                                                <span class="icon">★</span>
                                                <span class="icon">★</span>
                                                <span class="icon">★</span>   
                                            </label>
                                            <label>
                                                <input class="radiostar" type="radio" name="stars" value="4" />
                                                <span class="icon">★</span>
                                                <span class="icon">★</span>
                                                <span class="icon">★</span>
                                                <span class="icon">★</span>
                                            </label>
                                            <label>
                                                <input class="radiostar" type="radio" name="stars" value="5" />
                                                <span class="icon">★</span>
                                                <span class="icon">★</span>
                                                <span class="icon">★</span>
                                                <span class="icon">★</span>
                                                <span class="icon">★</span>
                                            </label>
                                            </div>
                                    
				</div>
                <input type="hidden" name="productreviewId" id="productreviewId" value="{{result._id}}">
                {{#if result.productPermalink}}
                <input type="hidden" name="link" id="link" value="/product/{{result.productPermalink}}">
                {{else}}
                <input type="hidden" name="link" id="link" value="/product/{{result._id}}">
                {{/if}}
				<div class="inputtextarea">
					<label for="textarea">Review Must Not Exceed 150 Words</label><br>
					<textarea name="reviewtextarea" class="form-control" id="reviewtextarea" required>{{rdata.description}}</textarea>
				</div>
				<div class="submit">
					<button class="btn amado-btn" type="submit">Submit</button>
				</div>
            </form>
			</div>
            {{/if}}
            {{#if reviews}}
            {{#each reviews}}
			<div class="reviewabc">
					<div class="star">
							{{#forTimes this.rating}}
                            <i class="fas fa-star i"></i>
                            {{/forTimes}}
                            {{#forTimesminus this.rating}}
                            <i class="far fa-star i"></i>
                            {{/forTimesminus}}
					</div>
					<h2>{{this.title}}</h2>
					<h5>{{this.username}} on <span>{{#formatDate this.date 'LLLL'}}
                        {{this}}
                        {{/formatDate}}</span></h5>
					<p>{{this.description}} </p>
			</div>
            {{/each}}
            {{/if}}
		</div>
		<div class="shippingpolicymain desccont">
			<h2>Shipping Policy Of Company</h2>
	
			<ul>
				<li>For all the serviceable areas, the delivery time would be 5 to 7 business days. </li>
				<li>COD is available for orders between Rs. 300 and Rs.5000</li>
				<li>Plant4u does not accept returns on plants as the poor plants will not survive due to both way transit stress</li>
                <li>Shipping Charges may apply to your order</li>
                <li>24/7 Live Support</li>
            </ul>
		</div>
</div>

    </div>
    <hr>

    {{!-- Related Products --}}
    {{#if config.showRelatedProducts}}
    {{#if relatedProducts}}

    <div class="recom-slider">
        <h3 class="heading top-marg-20">Related Products
            <hr class="top-marg-20">
        </h3>
        <div class="row top-marg-25 row">
            {{#each relatedProducts}}
          <div class="col-6 col-sm-4 col-lg-4 col-xl-3">
                        <div class="single-product-wrapper">
                            <!-- Product Image -->
                                {{#if productPermalink}}
                             <a href="/product/{{this.productPermalink}}">
                            <div class="product-img">
                                {{#if productImage}}
                                
                                    <img src="{{this.productImage.[0].path}}" alt="First Uploaded Image">
                                    <!-- Hover Thumb -->
                                    <img class="hover-img" src="{{this.productImage.[1].path}}" alt="Second Image">
                                {{else}}
                                    <img src="/images/p5.jpeg" alt="First Image">
                                    <!-- Hover Thumb -->
                                    <img class="hover-img" src="/images/p1.jpeg" alt="Second Image">
                                {{/if}}
                                <div class="tags">
                                        {{#if productDiscountPrice}}
                                    <div class="discount">
                                        {{#discount productDiscountPrice productPrice}}
                                            {{this}}
                                        {{/discount}}% Off
                                    </div>
                                    {{/if}}
                                </div>
                            </div>
                            </a>
                            {{else}}
                            <a href="/product/{{this._id}}">
                            <div class="product-img">
                                {{#if productImage}}
                                
                                    <img src="{{this.productImage.[0].path}}" alt="First Uploaded Image">
                                    <!-- Hover Thumb -->
                                    <img class="hover-img" src="{{this.productImage.[1].path}}" alt="Second Image">
                                {{else}}
                                    <img src="/images/p5.jpeg" alt="First Image">
                                    <!-- Hover Thumb -->
                                    <img class="hover-img" src="/images/p1.jpeg" alt="Second Image">
                                {{/if}}
                                <div class="tags">
                                        {{#if productDiscountPrice}}
                                    <div class="discount">
                                        {{#discount productDiscountPrice productPrice}}
                                            {{this}}
                                        {{/discount}}% Off
                                    </div>
                                    {{/if}}
                                </div>
                            </div>
                            </a>
                            {{/if}}

                            <!-- Product Description -->
                            <div class="product-description d-flex justify-content-between">
                                <!-- Product Meta Data -->
                                <div class="product-meta-data">
                                    <div class="line"></div>
                                    <p class="product-price">{{currencySymbol @root.config.currencySymbol}}{{formatAmount productPrice}}</p>
                                    {{#if productPermalink}}
                                    <a href="/product/{{this.productPermalink}}">
                                        <h6>{{this.productTitle}}</h6>
                                    </a>
                                    {{else}}
                                    <a href="/product/{{this._id}}">
                                        <h6>{{this.productTitle}}</h6>
                                    </a>
                                    {{/if}}
                                </div>
                                <!-- Ratings & Cart -->
                                <div class="ratings-cart text-right">
                                    <div class="ratings">
                                        {{#forTimes this.productRating}}
                                        <i class="fas fa-star i"></i>
                                        {{/forTimes}}
                                        {{#forTimesminus this.productRating}}
                                        <i class="far fa-star i"></i>
                                        {{/forTimesminus}}
                                    </div>
                                    <div class="cart">
                                        <a class="btn-round" data-toggle="tooltip" data-placement="left" title="Add to Cart" data-id="{{this._id}}" data-link="{{this.productPermalink}}" data-has-variants="{{checkProductVariants this.variants}}"><img src="/images/cart.png" alt=""></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
            
            {{/each}}
        </div>
    </div>
    {{/if}}
    {{/if}}
</div>
<input type="hidden" id="productId" value="{{result._id}}">
<input type="hidden" id="currencySymbol" value="{{currencySymbol config.currencySymbol}}">