        },
        "email": {
            "type": "string",
            "format": "emailAddress"
        },
        "firstName": {
            "type": "string"
        },
        "lastName": {
            "type": "string"
        },
        "address1": {
            "type": "string"
        },
        "address2": {
            "type": "string"
        },
        "country": {
            "type": "string"
        },
        "state": {
            "type": "string"
        },
        "postcode": {
            "type": "string"
        },
        "phone": {
            "type": "string",
            "isNotEmpty": true
        },
        "password": {
            "type": "string"
        },
        "newsletter": {
            "type": "boolean"
        }
